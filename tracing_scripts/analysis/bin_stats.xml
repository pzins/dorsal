<tmfxml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="xmlDefinition.xsd">

	<xyView id="tensorflow.bin_stats">
		<head>
			<analysis id="bin_stats" />
			<label value="Bin Stats" />
		</head>

		<entry path="Allocations/*" displayType="absolute"> 
			<display type="self" />
		</entry>
	</xyView>

	<stateProvider id="bin_stats" version="1">
		<head>
			<traceType id="org.eclipse.linuxtools.lttng2.ust.tracetype" />
			<label value="Bin Stats" />
		</head>

		<!-- case 1 : exit_syscall : Fields: int64 ret -->
		<eventHandler eventName="tensorflowTracer:gpu_bin_stats">
			<stateChange>
				<stateAttribute type="constant" value="Allocations" />
				<stateAttribute type="eventField" value="bin_numero" />
				<stateAttribute type="constant" value="total_chunks_in_bin" />
				<stateValue type="eventField" value="total_chunks_in_bin" increment="false" />
			</stateChange>

		</eventHandler>
	</stateProvider>
</tmfxml>