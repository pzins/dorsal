<tmfxml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="xmlDefinition.xsd">

	<xyView id="tensorflow.gpu_memory_nb_allocations">
		<head>
			<analysis id="gpu_memory_nb_allocations" />
			<label value="GPU Memory Number Allocations" />
		</head>

		<entry path="Allocations" displayType="absolute"> 
			<display type="self" />
		</entry>
	</xyView>

	<stateProvider id="gpu_memory_nb_allocations" version="1">
		<head>
			<traceType id="org.eclipse.linuxtools.lttng2.ust.tracetype" />
			<label value="GPU Memory Number Allocations" />
		</head>

		<!-- case 1 : exit_syscall : Fields: int64 ret -->
		<eventHandler eventName="tensorflowTracer:gpu_device_compute_entry">
			<stateChange>
				<stateAttribute type="constant" value="Allocations" />
				<stateValue type="eventField" value="num_alloc" increment="false" />
			</stateChange>
		</eventHandler>
	</stateProvider>
</tmfxml>